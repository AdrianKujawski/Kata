<Window x:Class="SoundTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SoundTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="play_button" Content="Play" HorizontalAlignment="Left" Margin="32,68,0,0" VerticalAlignment="Top" Width="75" Click="play_button_Click"/>
        <Button x:Name="open_button" Content="Open" HorizontalAlignment="Left" Margin="157,68,0,0" VerticalAlignment="Top" Width="75" Click="open_button_Click"/>
        <Button x:Name="stop_button" Content="Stop" HorizontalAlignment="Left" Margin="279,68,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="2.78,1.145" Click="stop_button_Click"/>
        <Button x:Name="button_delete" Content="Delete" HorizontalAlignment="Left" Margin="405,68,0,0" VerticalAlignment="Top" Width="75" Click="button_delete_Click"/>

    </Grid>
</Window>
